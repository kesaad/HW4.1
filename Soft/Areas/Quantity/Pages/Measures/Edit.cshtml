@page
@using Abc.Pages.Extensions
@model Abc.Soft.Areas.Quantity.Pages.Measures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />

            @Html.EditControlsFor(x => x.Item.Code);
            @Html.EditControlsFor(x => x.Item.Name);
            @Html.EditControlsFor(x => x.Item.Definition);
            @Html.EditControlsFor(x => x.Item.ValidFrom);
            @Html.EditControlsFor(x => x.Item.ValidTo);

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}